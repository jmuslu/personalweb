---
import Layout from '../layouts/Layout.astro';
import ProjectCard from '../components/ProjectCard.astro';

// This is where you'll add your projects
const projects = [
	{
		title: "Orion SA Discounted Cash Flow Stock Pitch Deck and Excel",
		description: "Powerpoint presentation pricing the value of Orion SA against competitors and cash flows with discounted cash flow analysis in  excel spreadsheet",
		image: "src/assets/images/Screenshot 2025-01-12 090253.png",
		tags: ["Financial Analysis", "Excel Spreadsheets","Risk Assessment","Market Research"],
		href: ["src/assets/documents/ORION SA DCF.xlsx","src/assets/documents/MUSLUSTOCKPITCH.pptx"],
		download: true  // Add this property
	},



	{
		title: "P/E Ratio Location Industry Trend Heatmap and Analysis",
		description: "Python program that uses data from csv files of S&P 500 companies and creates a heatmap plotting P/E ratios against industry and location overlap and supplementing write up and analysis",
		image: "src/assets/images/Location Industry Heatmap.png",
		tags: ["Python", "Statistical Analysis", "Market Research","Data Visualization"],
		href: ["src/assets/documents/financial_analysis.py","src/assets/documents/Data Science 2001 Final.pdf","src/assets/documents/Financial Heatmap.png"],
		download: true  // Add this property
	},



];
---

<Layout title="Projects - Your Portfolio">
	<div class="projects-header">
		<h1>My Projects</h1>
		<p>A collection of my work in data science and financial analysis</p>
	</div>

	<div class="projects-grid">
		{projects.map(project => (
			<ProjectCard {...project} />
		))}
	</div>
</Layout>

<style>
	.projects-header {
		text-align: center;
		margin-bottom: 3rem;
	}

	h1 {
		font-size: 2.5rem;
		margin-bottom: 1rem;
	}

	.projects-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
		gap: 2rem;
	}
</style>