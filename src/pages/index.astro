---
import Layout from '../layouts/Layout.astro';
import ProjectCard from '../components/ProjectCard.astro';

// Featured projects - you can use a subset of your projects collection
const featuredProjects = [
	{
		title: "Productivity Logger",
		description: "Swift app that allows users to create custom categories and visualize them over time in log cards that calculate points and are added to the dashboard",
		image: "/personalweb/IMG_6714 (2).PNG",
		tags: ["Swift", "Data Visualization"],
		href: ["https://apps.apple.com/us/app/productivity-logger/id6742164940"],
		download: true
	},
	{
		title: "P/E Ratio Location Industry Trend Heatmap",
		description: "Python program that uses data from S&P 500 companies and creates a heatmap plotting P/E ratios against industry and location overlap",
		image: "/personalweb/Location Industry Heatmap.png",
		tags: ["Python", "Statistical Analysis", "Data Visualization"],
		href: ["/personalweb/assets/documents/financial_analysis.py", "/personalweb/assets/documents/Data Science 2001 Final.pdf", "/personalweb/Financial Heatmap.png"],
		download: true
	}
];
---

<Layout title="Joseph Muslu - Data Science & Finance Portfolio">
	<div class="hero">
		<h1>Joseph Muslu</h1>
		<p class="subtitle">Data Science & Financial Analysis Portfolio</p>
		<p class="intro">
			Welcome to my portfolio showcasing projects across data science, financial modeling,
			and application development. My work focuses on practical applications of data in finance
			and developing technical skills across multiple domains.
		</p>
	</div>

	<section class="featured-section">
		<h2 class="section-title">Featured Projects</h2>

		<div class="projects-grid">
			{featuredProjects.map(project => (
				<ProjectCard {...project} />
			))}
		</div>

		<div class="view-all">
			<a href="/personalweb/projects" class="view-all-button">
				View All Projects
				<span class="arrow">â†’</span>
			</a>
		</div>
	</section>
</Layout>

<style>
	.hero {
		text-align: center;
		padding: 4rem 0 2rem;
		max-width: 800px;
		margin: 0 auto;
	}

	h1 {
		font-size: 3.5rem;
		font-weight: 700;
		margin-bottom: 0.5rem;
		background: linear-gradient(45deg, var(--accent-light), var(--accent));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}

	.subtitle {
		font-size: 1.5rem;
		color: #a1a1aa;
		margin-bottom: 1.5rem;
	}

	.intro {
		font-size: 1.1rem;
		line-height: 1.6;
		color: #d1d1d6;
		max-width: 700px;
		margin: 0 auto 2rem;
	}

	.featured-section {
		margin: 2rem 0 6rem;
	}

	.section-title {
		font-size: 2rem;
		text-align: center;
		margin-bottom: 2.5rem;
		position: relative;
	}

	.section-title::after {
		content: "";
		display: block;
		height: 3px;
		width: 60px;
		background: var(--accent);
		margin: 0.75rem auto 0;
		border-radius: 2px;
	}

	.projects-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
		gap: 2rem;
		margin-bottom: 3rem;
	}

	.view-all {
		text-align: center;
		margin-top: 2rem;
	}

	.view-all-button {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		background-color: transparent;
		border: 2px solid var(--accent);
		color: var(--accent);
		font-weight: 600;
		padding: 0.75rem 1.75rem;
		border-radius: 8px;
		text-decoration: none;
		transition: all 0.2s;
	}

	.view-all-button:hover {
		background-color: var(--accent);
		color: white;
	}

	.arrow {
		transition: transform 0.2s;
	}

	.view-all-button:hover .arrow {
		transform: translateX(4px);
	}

	@media (max-width: 768px) {
		h1 {
			font-size: 2.5rem;
		}

		.subtitle {
			font-size: 1.2rem;
		}

		.projects-grid {
			grid-template-columns: 1fr;
		}
	}
</style>