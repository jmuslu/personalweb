---
import Header from '../components/Header.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;

// Determine the active page based on the current URL path
const pathname = Astro.url.pathname;
const getActivePage = () => {
	if (pathname.includes('/projects')) return 'projects';
	if (pathname.includes('/about')) return 'about';
	return 'home';
};

const activePage = getActivePage();
---

<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8" />
	<meta name="description" content="Personal portfolio showcasing data science and finance projects" />
	<meta name="viewport" content="width=device-width" />
	<link rel="icon" type="image/png" href="/personalweb/favicon.png" />
	<meta name="generator" content={Astro.generator} />
	<title>{title}</title>
</head>
<body>
<Header activePage={activePage} />

<div class="page-wrapper">
	<main>
		<slot />
	</main>

	<footer class="bg-dark">
		<div class="container">
			<p>&copy; {new Date().getFullYear()} Joseph Muslu - All rights reserved</p>
		</div>
	</footer>
</div>
</body>
</html>

<style is:global>
	:root {
		--accent: #646cff;
		--accent-light: #747bff;
		--background: #13151a;
		--text: #ffffff;
	}

	html {
		font-family: system-ui, sans-serif;
		background: var(--background);
		color: var(--text);
		height: 100%;
		overflow-y: scroll;
	}

	body {
		margin: 0;
		min-height: 100vh;
		display: flex;
		flex-direction: column;
	}

	.page-wrapper {
		flex: 1;
		display: flex;
		flex-direction: column;
	}

	main {
		flex: 1;
		max-width: 1200px;
		width: 100%;
		margin: 0 auto;
		padding: 2rem;
	}

	footer {
		margin-top: auto;
		padding: 1.5rem 0;
		text-align: center;
	}

	footer .container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	footer p {
		margin: 0;
		color: #a1a1aa;
	}

	.bg-dark {
		background-color: #0c0d11;
	}

	.text-accent {
		color: var(--accent);
	}
</style>

